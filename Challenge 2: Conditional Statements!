#include<stdio.h>
int main()

{
    printf("Pick an item : \n1. pizza,Rs 239\n2. burger,Rs 129\n3. pasta, Rs 179\n4. french fries,Rs 99\n5. sandwich,Rs 149\n\n");
    int choice=0;
    printf("Enter the Number: ");
    scanf ("%d",&choice);
    printf("\n");
  
     switch(choice)
    { 
        case 1: printf("Food item - Pizza\n");
                printf("Price - Rs 179");
        break; 
        case 2: printf("Food item - Burger\n");     
                printf("Price - Rs 129");
        break; 
        case 3: printf("Food item - Pasta\n");     
                printf("Price - Rs 179"); 
        break; 
        case 4: printf("Food item - French Fries\n");     
                printf("Price - Rs 99");
        break;
        case 5: printf("Food item - Sandwich\n");
                printf("Price - Rs 149");
        break;
        default : printf("Invalid choice");
    }
}
